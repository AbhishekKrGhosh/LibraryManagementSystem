<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="@drawable/pic09">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:cardCornerRadius="8dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#80000000"
        app:strokeWidth="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <ImageView
                android:layout_gravity="center_horizontal"
                android:layout_width="126sp"
                android:layout_height="200sp"
                android:scaleType="centerCrop"
                android:src="@drawable/me" />

                <TextView
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abhishek Kumar"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF" />
            <TextView
                android:layout_marginTop="30sp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Age:20"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />
            <TextView

                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="University: LPU"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />
            <TextView

                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reg No: 12010299"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />
            <TextView

                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Membership: Active"
                android:textSize="22sp"
                android:textColor="#FFFFFF" />
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="30sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Signature: "
                android:textSize="22sp"
                android:textColor="#FFFFFF" />
                <Button
                    android:id="@+id/signhere"
                    android:layout_marginLeft="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign here"/>
            </LinearLayout>




        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>


</RelativeLayout>